<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/infoImageView"
		android:layout_width="@dimen/info_window_image_size"
		android:layout_height="@dimen/info_window_image_size"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/infoTitleText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textColor="@color/colorBlack"
		android:textSize="@dimen/textSmallSize"
		android:textStyle="bold"
		app:layout_constraintStart_toEndOf="@+id/infoImageView"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/infoSubtitleText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="1dp"
		android:ellipsize="end"
		android:maxLines="1"
		android:textColor="@color/colorBlack"
		android:textSize="@dimen/textSmallSize"
		app:layout_constraintStart_toEndOf="@+id/infoImageView"
		app:layout_constraintTop_toBottomOf="@+id/infoTitleText" />

	<TextView
		android:id="@+id/infoDescriptionText"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		android:layout_marginStart="10dp"
		android:layout_marginTop="1dp"
		android:ellipsize="end"
		android:maxLines="2"
		android:textColor="@color/colorGrey"
		android:textSize="@dimen/textSmallSize"
		app:layout_constraintStart_toEndOf="@+id/infoImageView"
		app:layout_constraintTop_toBottomOf="@+id/infoSubtitleText" />

</android.support.constraint.ConstraintLayout>